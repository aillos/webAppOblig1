@model WildStays.Models.Listing

@{
    ViewData["Title"] = "Manage Images";
}

<h1>Manage Images</h1>

<form asp-action="ManageImages" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Images" class="control-label">Images</label>
        <input type="file" asp-for="Images" multiple class="form-control" multiple accept="image/*" />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>

    <div id="image-inputs" multiple accept="image/*">
        <!-- This is where the dynamic image input fields will be generated -->
    </div>

    <button type="button" id="add-image-input" class="btn btn-primary">Add More Images</button>

    <h2>Images for @Model.Id</h2>
    <div class="image-container">
        @foreach (var image in await _itemRepository.GetImagesByListingId(Model.Id))
        {
            <div>
                <img src="@image.FilePath" alt="Image" class="img-thumbnail" />
                <button type="submit" name="deleteImage" value="@image.Id" class="btn btn-danger">Delete</button>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" name="saveImages" value="Save Images" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var imageInputs = $("#image-inputs");
            var addImageInputButton = $("#add-image-input");

            addImageInputButton.click(function () {
                var input = '<div class="form-group">' +
                    '<input type="file" name="Images" class="form-control" multiple />' +
                    '</div>';

                imageInputs.append(input);
            });
        });
    </script>
}
